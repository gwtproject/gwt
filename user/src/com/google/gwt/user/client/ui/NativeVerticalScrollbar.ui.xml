<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style gss="true">
    .viewport {
      position: relative;
      overflow: hidden;
      direction: ltr;
    }

    .scrollable {
      /* @noflip */ position: absolute;
      /* @noflip */ top: 0;
      /* @noflip */ right: 0;
      /* @noflip */ height: 100%;
      /* @noflip */ width: 100px;
      /* @noflip */ overflow-y: scroll;
      /* @noflip */ overflow-x: hidden;
    }

  </ui:style>

  <!-- Viewport: reveals only the scrollbar from the scrollable div. -->
  <div
    class="{style.viewport}">

    <!-- Scrollable: a scrollable div. -->
    <div
      ui:field="scrollable"
      class="{style.scrollable}">

      <!-- Content: controls how far the div can be scrolled. -->
      <div
        ui:field="contentDiv" />
    </div>
  </div>
</ui:UiBinder> 